<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nehvin.s05e86weatherapp.MainActivity">

    <ImageView
        android:id="@+id/bckImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dark_bck" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Enter the City"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/BluishGreen"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/getWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Get The Weather"
        android:onClick="getWeatherReport"
        />

    <TextView
        android:id="@+id/weatherReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getWeather"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>